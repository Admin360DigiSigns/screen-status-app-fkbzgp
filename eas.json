        "buildType": "apk",
        "gradleCommand": ":app:assembleDebug",
        "resourceClass": "large"
      },
      "ios": {
        "simulator": true
      },
      "env": {
        "GRADLE_OPTS": "-Xmx14336m -XX:MaxMetaspaceSize=7168m -XX:ReservedCodeCacheSize=2048m -XX:+HeapDumpOnOutOfMemoryError -XX:+UseG1GC -XX:MaxGCPauseMillis=200",
        "ORG_GRADLE_PROJECT_kotlin.daemon.jvmargs": "-Xmx10240m -XX:MaxMetaspaceSize=6144m",
        "KOTLIN_DAEMON_OPTS": "-Xmx10240m -XX:MaxMetaspaceSize=6144m"
      }
    },
    "preview": {
      "distribution": "internal",
      "android": {
        "buildType": "apk",
