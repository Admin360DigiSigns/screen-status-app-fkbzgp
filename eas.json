        "ORG_GRADLE_PROJECT_kotlin.daemon.jvmargs": "-Xmx10240m -XX:MaxMetaspaceSize=6144m -XX:ReservedCodeCacheSize=2048m",
        "KOTLIN_DAEMON_OPTS": "-Xmx10240m -XX:MaxMetaspaceSize=6144m -XX:ReservedCodeCacheSize=2048m",
